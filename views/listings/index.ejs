<% layout('/layouts/boilerplate.ejs') -%>
<body>
    <!-- <h1>All Listings</h1> -->
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <style>
      #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }
      .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
      }
      .filter:hover{
        opacity: 1;
        cursor: pointer;
      }
      .filter p{
        font-size: 0.8rem;
      }
      .tax-info{
        display: none;
      }
      .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;

      }
    </style>


    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Treanding</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic city</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>montain</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></i></div>
        <p>castle</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing places</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></i></div>
        <p>Domes</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
        </div>
      </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-mb-2 row-col-sm-1 mt-3">
        <% for(i of allListings){ %>
            <a href='/listings/<%=i.id%>' class="listing-link">
            <div class="card col card-listing" style="width: 20rem;">
                <img src="<%= i.image.url%>" class="card-img-top" alt="listing_img" style="height: 20rem;">
                <div class="card-img-overlay">mahi</div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= i.title %></b><br>
                    &#8377;<%=i.price.toLocaleString("en-IN")%> / night
                    <i class="tax-info">&nbsp;+18%GST</i>
                  </p>
                </div>
              </div>
            </a>
            <% } %>
    </div>
</body>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    if(taxSwitch.checked==false){
      for(i of taxInfo){
        i.style.display="none";
      }
    }
    else{
      for(i of taxInfo){
        i.style.display="inline";
      }
    }
  })
</script>